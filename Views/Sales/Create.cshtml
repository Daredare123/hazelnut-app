@model HazelnutVeb.Models.Sale

@{
    ViewData["Title"] = "Create Sale";
}

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-primary text-white border-0 py-3 rounded-top-4">
                <h4 class="mb-0 fw-bold"><i class="bi bi-cart-plus me-2 text-warning"></i>New Sale</h4>
                <p class="mb-0 small opacity-75">Enter details below to create a new sale</p>
            </div>
            <div class="card-body p-4 p-md-5">
                <form asp-action="Create" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4 shadow-sm"></div>

                    <div class="row mb-4">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label asp-for="Date" class="form-label text-secondary fw-bold text-uppercase small">Date</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light border-0"><i class="bi bi-calendar3 text-muted"></i></span>
                                <input asp-for="Date" type="date" class="form-control border-0 bg-light fw-bold" />
                            </div>
                            <span asp-validation-for="Date" class="text-danger small mt-1 d-block"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ClientName" class="form-label text-secondary fw-bold text-uppercase small">Client Name</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light border-0"><i class="bi bi-person text-muted"></i></span>
                                <input asp-for="ClientName" class="form-control border-0 bg-light fw-bold" placeholder="E.g. John Doe" />
                            </div>
                            <span asp-validation-for="ClientName" class="text-danger small mt-1 d-block"></span>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label asp-for="QuantityKg" class="form-label text-secondary fw-bold text-uppercase small">Quantity (Kg)</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light border-0 fw-bold text-muted">kg</span>
                                <input asp-for="QuantityKg" type="number" step="0.01" class="form-control border-0 bg-light fw-bold font-monospace fs-4 text-end" id="QuantityKg" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="QuantityKg" class="text-danger small mt-1 d-block"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="PricePerKg" class="form-label text-secondary fw-bold text-uppercase small">Price / Kg (MKD)</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light border-0 fw-bold text-muted">ден</span>
                                <input asp-for="PricePerKg" type="number" step="0.01" class="form-control border-0 bg-light fw-bold font-monospace fs-4 text-end" id="PricePerKg" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="PricePerKg" class="text-danger small mt-1 d-block"></span>
                        </div>
                    </div>

                    <div class="mb-5 bg-success bg-opacity-10 p-4 rounded-3 border border-success border-opacity-25">
                        <label asp-for="Total" class="form-label text-success fw-bold text-uppercase small mb-1">Total Amount (MKD)</label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text bg-transparent border-0 text-success fw-bold fs-3">ден</span>
                            <input asp-for="Total" class="form-control bg-transparent border-0 fw-bolder text-success fs-1 font-monospace text-end" id="Total" readonly value="0.00" />
                        </div>
                        <span asp-validation-for="Total" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-between align-items-center">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 border-0 shadow-sm fw-bold"><i class="bi bi-arrow-left me-2"></i> Cancel</a>
                        <button type="submit" class="btn btn-primary btn-lg px-5 shadow fw-bold text-uppercase"><i class="bi bi-check2-circle me-2"></i> Save Sale</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const quantityInput = document.getElementById("QuantityKg");
            const priceInput = document.getElementById("PricePerKg");
            const totalInput = document.getElementById("Total");

            function calculateTotal() {
                const qty = parseFloat(quantityInput.value) || 0;
                const price = parseFloat(priceInput.value) || 0;
                const total = qty * price;
                totalInput.value = total.toFixed(2);
            }

            quantityInput.addEventListener("input", calculateTotal);
            priceInput.addEventListener("input", calculateTotal);
            
            calculateTotal();
        });
    </script>
}
