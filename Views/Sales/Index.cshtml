@model IEnumerable<HazelnutVeb.Models.Sale>

@{
    ViewData["Title"] = "Sales";
}

<div class="row mb-4 align-items-center">
    <div class="col-md-6">
        <h2 class="fw-bold mb-0 text-dark"><i class="bi bi-cart3 me-2 text-primary"></i>Sales Records</h2>
    </div>
    <div class="col-md-6 text-md-end mt-3 mt-md-0">
        <a asp-action="Create" class="btn btn-primary d-inline-flex align-items-center shadow-sm">
            <i class="bi bi-plus-lg me-2"></i> New Sale
        </a>
    </div>
</div>

<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0 text-nowrap">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3 text-secondary text-uppercase small fw-bold border-0">Date</th>
                        <th class="py-3 text-secondary text-uppercase small fw-bold border-0">Client Name</th>
                        <th class="py-3 text-secondary text-uppercase small fw-bold border-0 text-end">Quantity (Kg)</th>
                        <th class="py-3 text-secondary text-uppercase small fw-bold border-0 text-end">Price / Kg</th>
                        <th class="pe-4 py-3 text-secondary text-uppercase small fw-bold border-0 text-end">Total</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="bi bi-inbox fs-1 d-block mb-3 opacity-25"></i>
                                No sales records found.
                            </td>
                        </tr>
                    }
                    else 
                    {
                        @foreach (var item in Model.OrderByDescending(x => x.Date)) {
                            <tr>
                                <td class="ps-4 fw-bold text-dark">
                                    @item.Date.ToString("dd MMM yyyy")
                                    <small class="d-block text-muted fw-normal">@item.Date.ToString("HH:mm")</small>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ClientName)
                                </td>
                                <td class="text-end font-monospace">
                                    @item.QuantityKg.ToString("N2")
                                </td>
                                <td class="text-end font-monospace">
                                    @item.PricePerKg.ToString("N2")
                                </td>
                                <td class="pe-4 text-end fw-bold text-success font-monospace">
                                    @item.Total.ToString("N2") ден
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
