@model HazelnutVeb.Models.Inventory

@{
    ViewData["Title"] = "Update Inventory";
}

<div class="row justify-content-center">
    <div class="col-lg-5 col-md-7">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-warning text-white border-0 py-3 rounded-top-4">
                <h4 class="mb-0 fw-bold"><i class="bi bi-pencil-square me-2 text-dark"></i>Stock Adjustment</h4>
                <p class="mb-0 small opacity-75 text-dark">Update stock manually</p>
            </div>
            <div class="card-body p-4 p-md-5">
                <form asp-action="Update" class="needs-validation" novalidate>
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4 shadow-sm"></div>

                    <div class="mb-4">
                        <label asp-for="TotalKg" class="form-label text-secondary fw-bold text-uppercase small">Total Stock (Kg)</label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text bg-light border-0"><i class="bi bi-box-seam text-muted"></i></span>
                            <input asp-for="TotalKg" type="number" step="0.01" class="form-control border-0 bg-light fw-bold font-monospace fs-4 text-end" id="TotalKg" />
                        </div>
                        <span asp-validation-for="TotalKg" class="text-danger small mt-1 d-block"></span>
                        <small class="text-muted d-block mt-2 fst-italic"><i class="bi bi-info-circle me-1"></i> Enter the physical count of hazelnuts.</small>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-between align-items-center">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 border-0 shadow-sm fw-bold"><i class="bi bi-arrow-left me-2"></i> Cancel</a>
                        <button type="submit" class="btn btn-success btn-lg px-5 shadow fw-bold text-uppercase"><i class="bi bi-check2-circle me-2"></i> Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
