@model HazelnutVeb.Models.Reservation

@{
    ViewData["Title"] = "New Reservation";
}

<div class="row align-items-center mb-4">
    <div class="col-md-6">
        <h2 class="fw-bold mb-0 text-dark">
            <i class="bi bi-plus-circle text-primary me-2"></i>Create Reservation
        </h2>
    </div>
    <div class="col-md-6 text-md-end mt-3 mt-md-0">
        <a asp-action="Index" class="btn btn-outline-secondary d-inline-flex align-items-center shadow-sm">
            <i class="bi bi-arrow-left me-2"></i> Back to List
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow border-0 rounded-4">
            <div class="card-body p-4 p-md-5">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="mb-4">
                        <label asp-for="Quantity" class="form-label text-secondary fw-bold text-uppercase small"></label>
                        <input asp-for="Quantity" class="form-control border-0 bg-light fw-bold text-dark" style="font-size: 1.1rem" placeholder="e.g. 15.5" />
                        <span asp-validation-for="Quantity" class="text-danger small mt-1 d-block"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="Date" class="form-label text-secondary fw-bold text-uppercase small"></label>
                        <input asp-for="Date" type="date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="pt-3">
                        <button type="submit" class="btn btn-primary px-5 py-2 fw-bold text-uppercase shadow-sm w-100">
                            Reserve Hazelnuts <i class="bi bi-arrow-right ms-2"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
