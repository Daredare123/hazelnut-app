@model IEnumerable<HazelnutVeb.Models.Reservation>

@{
    ViewData["Title"] = "Reservations";
}

<div class="row mb-4 align-items-center">
    <div class="col-md-6">
        <h2 class="fw-bold mb-0 text-dark"><i class="bi bi-clock-history me-2 text-primary"></i>Reservations</h2>
    </div>
    <div class="col-md-6 text-md-end mt-3 mt-md-0">
        <a asp-action="Create" class="btn btn-primary d-inline-flex align-items-center shadow-sm">
            <i class="bi bi-plus-lg me-2"></i> New Reservation
        </a>
    </div>
</div>

<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0 text-nowrap">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3 text-secondary text-uppercase small fw-bold border-0">Date</th>
                        <th class="py-3 text-secondary text-uppercase small fw-bold border-0">Client</th>
                        <th class="py-3 text-secondary text-uppercase small fw-bold border-0 text-end">Quantity (Kg)</th>
                        <th class="py-3 text-secondary text-uppercase small fw-bold border-0 text-center">Status</th>
                        <th class="pe-4 py-3 text-secondary text-uppercase small fw-bold border-0 text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="bi bi-inbox fs-1 d-block mb-3 opacity-25"></i>
                                No reservations found.
                            </td>
                        </tr>
                    }
                    else 
                    {
                        @foreach (var item in Model) {
                            <tr>
                                <td class="ps-4 fw-bold text-dark">
                                    @item.Date.ToString("dd MMM yyyy")
                                </td>
                                <td>
                                    @(item.Client?.Name ?? "Unknown")
                                </td>
                                <td class="text-end font-monospace">
                                    @item.Quantity.ToString("N2")
                                </td>
                                <td class="text-center">
                                    @if (item.Status == "Pending")
                                    {
                                        <span class="badge bg-warning text-dark px-3 py-2 rounded-pill shadow-sm">@item.Status</span>
                                    }
                                    else if (item.Status == "Approved")
                                    {
                                        <span class="badge bg-primary px-3 py-2 rounded-pill shadow-sm">@item.Status</span>
                                    }
                                    else if (item.Status == "Completed")
                                    {
                                        <span class="badge bg-success px-3 py-2 rounded-pill shadow-sm">@item.Status</span>
                                    }
                                    else if (item.Status == "Rejected" || item.Status == "Cancelled")
                                    {
                                        <span class="badge bg-danger px-3 py-2 rounded-pill shadow-sm">@item.Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary px-3 py-2 rounded-pill shadow-sm">@item.Status</span>
                                    }
                                </td>
                                <td class="pe-4 text-center">
                                    @if(item.Status == "Pending" && User.IsInRole("Admin"))
                                    {
                                        <div class="d-flex justify-content-center align-items-center gap-2">
                                            <form asp-action="Approve" method="post" class="mb-0">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-outline-success btn-sm rounded-pill shadow-sm py-1 px-3">
                                                    <i class="bi bi-check-circle me-1"></i> Approve
                                                </button>
                                            </form>
                                            <form asp-action="Reject" method="post" class="mb-0">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill shadow-sm py-1 px-3"
                                                    onclick="return confirm('Are you sure you want to reject this reservation? Inventory will be restored.')">
                                                    <i class="bi bi-x-circle me-1"></i> Reject
                                                </button>
                                            </form>
                                        </div>
                                    }
                                    else if(item.Status == "Approved" && User.IsInRole("Admin"))
                                    {
                                        <div class="d-flex justify-content-center align-items-center gap-2">
                                            <form asp-action="Complete" method="post" class="d-flex align-items-center mb-0 gap-2">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <div class="input-group input-group-sm mb-0" style="width: 140px;">
                                                    <span class="input-group-text bg-light border-end-0 border-secondary border-opacity-25">Price/kg</span>
                                                    <input type="number" step="0.01" name="pricePerKg" class="form-control border-start-0 border-secondary border-opacity-25" placeholder="0" required />
                                                </div>
                                                <button type="submit" class="btn btn-outline-success btn-sm rounded-pill shadow-sm py-1 px-3">
                                                    <i class="bi bi-check-circle me-1"></i> Complete
                                                </button>
                                            </form>

                                            <form asp-action="Cancel" method="post" class="mb-0">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill shadow-sm py-1 px-3"
                                                    onclick="return confirm('Are you sure you want to cancel this reservation? Inventory will be restored.')">
                                                    <i class="bi bi-x-circle me-1"></i> Cancel
                                                </button>
                                            </form>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">No actions available</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
