@model HazelnutVeb.Models.Expense

@{
    ViewData["Title"] = "Create Expense";
}

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-warning text-white border-0 py-3 rounded-top-4">
                <h4 class="mb-0 fw-bold"><i class="bi bi-wallet-plus me-2 text-dark"></i>Add Expense</h4>
                <p class="mb-0 small opacity-75 text-dark">Record a new business expense</p>
            </div>
            <div class="card-body p-4 p-md-5">
                <form asp-action="Create" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4 shadow-sm"></div>

                    <div class="row mb-4">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label asp-for="Date" class="form-label text-secondary fw-bold text-uppercase small">Date</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light border-0"><i class="bi bi-calendar3 text-muted"></i></span>
                                <input asp-for="Date" type="date" class="form-control border-0 bg-light fw-bold" />
                            </div>
                            <span asp-validation-for="Date" class="text-danger small mt-1 d-block"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Amount" class="form-label text-secondary fw-bold text-uppercase small">Amount (MKD)</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light border-0 fw-bold text-muted">ден</span>
                                <input asp-for="Amount" type="number" step="0.01" class="form-control border-0 bg-light fw-bold font-monospace fs-4 text-end" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger small mt-1 d-block"></span>
                        </div>
                    </div>

                    <div class="mb-5">
                         <label asp-for="Description" class="form-label text-secondary fw-bold text-uppercase small">Description</label>
                         <div class="input-group input-group-lg">
                             <span class="input-group-text bg-light border-0"><i class="bi bi-card-text text-muted"></i></span>
                             <input asp-for="Description" class="form-control border-0 bg-light fw-bold" placeholder="E.g. Transport, Packaging..." />
                         </div>
                         <span asp-validation-for="Description" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-between align-items-center">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 border-0 shadow-sm fw-bold"><i class="bi bi-arrow-left me-2"></i> Cancel</a>
                        <button type="submit" class="btn btn-warning btn-lg px-5 shadow fw-bold text-uppercase text-white"><i class="bi bi-check2-circle me-2"></i> Save Expense</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
