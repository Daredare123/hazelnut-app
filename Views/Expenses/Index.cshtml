@model IEnumerable<HazelnutVeb.Models.Expense>

@{
    ViewData["Title"] = "Expenses";
}

<div class="row mb-4 align-items-center">
    <div class="col-md-6">
        <h2 class="fw-bold mb-0 text-dark"><i class="bi bi-wallet2 me-2 text-warning"></i>Expenses Records</h2>
    </div>
    <div class="col-md-6 text-md-end mt-3 mt-md-0">
        <a asp-action="Create" class="btn btn-warning text-white d-inline-flex align-items-center shadow-sm">
            <i class="bi bi-plus-lg me-2"></i> Add Expense
        </a>
    </div>
</div>

<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3 text-secondary text-uppercase small fw-bold border-0">@Html.DisplayNameFor(model => model.Date)</th>
                        <th class="py-3 text-secondary text-uppercase small fw-bold border-0">@Html.DisplayNameFor(model => model.Description)</th>
                        <th class="pe-4 py-3 text-secondary text-uppercase small fw-bold border-0 text-end">@Html.DisplayNameFor(model => model.Amount)</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center py-5 text-muted">
                                <i class="bi bi-wallet-fill fs-1 d-block mb-3 opacity-25"></i>
                                No expense records found.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model.OrderByDescending(x => x.Date)) {
                            <tr>
                                <td class="ps-4 fw-bold text-dark">
                                    @item.Date.ToString("dd MMM yyyy")
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td class="pe-4 text-end fw-bold text-danger font-monospace">
                                    @item.Amount.ToString("N2") ден
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
