@model HazelnutVeb.Models.MonthlyReportViewModel
@{
    ViewData["Title"] = "Monthly Report";
    var months = new System.Globalization.DateTimeFormatInfo().MonthNames;
    var currentYear = DateTime.Now.Year;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5">Monthly Report</h1>
        <a asp-controller="Home" asp-action="Dashboard" class="btn btn-outline-secondary">Back to Dashboard</a>
    </div>

    <!-- Filter Form -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">Generate Report</h5>
        </div>
        <div class="card-body">
            <form asp-action="Monthly" method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label for="month" class="form-label fw-bold">Select Month</label>
                    <select name="month" id="month" class="form-select">
                        @for (int i = 1; i <= 12; i++)
                        {
                            if (Model.Month == i)
                            {
                                <option value="@i" selected>@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(i)</option>
                            }
                            else
                            {
                                <option value="@i">@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(i)</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="year" class="form-label fw-bold">Select Year</label>
                    <select name="year" id="year" class="form-select">
                        <option value="@currentYear" selected="@(Model.Year == currentYear)">@currentYear</option>
                        <option value="@(currentYear - 1)" selected="@(Model.Year == currentYear - 1)">@(currentYear - 1)</option>
                        <option value="@(currentYear - 2)" selected="@(Model.Year == currentYear - 2)">@(currentYear - 2)</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100">View Report</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Report Results -->
    <h3 class="mb-3 text-secondary">Results for @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(Model.Month) @Model.Year</h3>
    
    <div class="row">
        <!-- Totals Row -->
        <div class="col-md-4 mb-3">
            <div class="card bg-success text-white h-100 shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Total Sales</h5>
                    <p class="display-6 fw-bold">@Model.TotalSales.ToString("C")</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card bg-danger text-white h-100 shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Total Expenses</h5>
                    <p class="display-6 fw-bold">@Model.TotalExpenses.ToString("C")</p>
                </div>
            </div>
        </div>
        @{
            var profitClass = Model.Profit >= 0 ? "text-success" : "text-danger";
            var cardBorderClass = Model.Profit >= 0 ? "border-success" : "border-danger";
        }
        <div class="col-md-4 mb-3">
            <div class="card @cardBorderClass bg-light h-100 shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title text-secondary">Net Profit</h5>
                    <p class="display-6 fw-bold @profitClass">@Model.Profit.ToString("C")</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-2">
        <!-- Metrics Row -->
        <div class="col-md-6 mb-3">
            <div class="card border-info h-100 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title text-info mb-0">Total Quantity Sold</h5>
                        <small class="text-muted">Total weight in Kg</small>
                    </div>
                    <p class="h2 text-info mb-0">@Model.TotalKg.ToString("N2") <span class="fs-5">kg</span></p>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card border-primary h-100 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title text-primary mb-0">Total Transactions</h5>
                        <small class="text-muted">Count of sales</small>
                    </div>
                    <p class="h2 text-primary mb-0">@Model.TotalTransactions</p>
                </div>
            </div>
        </div>
    </div>
</div>
