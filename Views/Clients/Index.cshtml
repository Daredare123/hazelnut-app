@model IEnumerable<HazelnutVeb.Models.ClientListViewModel>

@{
    ViewData["Title"] = "Clients";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Clients</h1>
    <a asp-action="Create" class="btn btn-primary d-inline-flex align-items-center shadow-sm">
        <i class="bi bi-plus-lg me-2"></i> Create New Client
    </a>
</div>

<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4 py-3 text-secondary text-uppercase small fw-bold border-0">Client Name</th>
                        <th class="py-3 text-secondary text-uppercase small fw-bold border-0 text-end">Total KG</th>
                        <th class="py-3 text-secondary text-uppercase small fw-bold border-0 text-end">Total Revenue (ден)</th>
                        <th class="py-3 text-secondary text-uppercase small fw-bold border-0 text-center">Sales Count</th>
                        <th class="pe-4 py-3 text-secondary text-uppercase small fw-bold border-0 text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td class="ps-4 fw-bold">@item.Name</td>
                        <td class="text-end font-monospace">@item.TotalQuantity.ToString("N2")</td>
                        <td class="text-end fw-bold text-success font-monospace">@item.TotalRevenue.ToString("N2")</td>
                        <td class="text-center">
                            <span class="badge bg-primary rounded-pill">@item.TotalSalesCount</span>
                        </td>
                        <td class="pe-4 text-center">
                            <div class="btn-group shadow-sm" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Edit"><i class="bi bi-pencil"></i></a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Details"><i class="bi bi-info-circle"></i></a>
                                <a asp-action="Report" asp-route-clientId="@item.Id" class="btn btn-sm btn-outline-success" title="View Report"><i class="bi bi-bar-chart"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete"><i class="bi bi-trash"></i></a>
                            </div>
                        </td>
                    </tr>
            }
                </tbody>
            </table>
        </div>
    </div>
</div>
