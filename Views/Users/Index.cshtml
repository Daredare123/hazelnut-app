@model IEnumerable<HazelnutVeb.Models.User>
@{
    ViewData["Title"] = "Users Management";
}

<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h4 class="mb-0"><i class="bi bi-people-fill me-2"></i> Users Management</h4>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Email</td>
                            <td>
                                @if (user.Role == "Admin")
                                {
                                    <span class="badge bg-success">Admin</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Client</span>
                                }
                            </td>
                            <td>
                                @if (user.Role == "Client")
                                {
                                    <form asp-action="PromoteToAdmin" method="post" style="display:inline;">
                                        <input type="hidden" name="id" value="@user.Id" />
                                        <button type="submit" class="btn btn-sm btn-success">
                                            <i class="bi bi-arrow-up-circle"></i> Make Admin
                                        </button>
                                    </form>
                                }
                                else if (user.Role == "Admin" && user.Email != User.Identity?.Name)
                                {
                                    <form asp-action="DemoteToClient" method="post" style="display:inline;">
                                        <input type="hidden" name="id" value="@user.Id" />
                                        <button type="submit" class="btn btn-sm btn-warning">
                                            <i class="bi bi-arrow-down-circle"></i> Make Client
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
